<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>웹 오목 게임</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      text-align: center;
      background: #f9f9f9;
    }

    h1 {
      margin-top: 20px;
    }

    #board {
      margin: 20px auto;
      display: grid;
      grid-template-columns: repeat(15, 40px);
      grid-template-rows: repeat(15, 40px);
      width: 600px;
      height: 600px;
      border: 2px solid #444;
      background-color: #f0d9b5;
    }

    .cell {
      border: 1px solid #aaa;
      box-sizing: border-box;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .black, .white {
      width: 30px;
      height: 30px;
      border-radius: 50%;
    }

    .black {
      background-color: black;
    }

    .white {
      background-color: white;
      box-shadow: 0 0 4px rgba(0, 0, 0, 0.4);
    }

    #status {
      margin-top: 20px;
      font-size: 18px;
    }

    button {
      margin-top: 15px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>🕹️ 웹 오목 게임</h1>
  <div id="board"></div>
  <div id="status">흑돌 차례입니다</div>
  <button onclick="resetGame()">다시 시작</button>

  <script>
    const SIZE = 15;
    let board = [];
    let currentPlayer = 'black';
    let gameOver = false;

    const boardElement = document.getElementById('board');
    const statusElement = document.getElementById('status');

    function createBoard() {
      board = Array.from({ length: SIZE }, () => Array(SIZE).fill(null));
      boardElement.innerHTML = '';
      gameOver = false;
      currentPlayer = 'black';
      statusElement.textContent = '흑돌 차례입니다';

      for (let y = 0; y < SIZE; y++) {
        for (let x = 0; x < SIZE; x++) {
          const cell = document.createElement('div');
          cell.classList.add('cell');
          cell.dataset.x = x;
          cell.dataset.y = y;
          cell.addEventListener('click', handleClick);
          boardElement.appendChild(cell);
        }
      }
    }

    function handleClick(e) {
      if (gameOver) return;

      const x = parseInt(e.target.dataset.x);
      const y = parseInt(e.target.dataset.y);

      if (board[y][x]) return;

      board[y][x] = currentPlayer;

      const stone = document.createElement('div');
      stone.classList.add(currentPlayer);
      e.target.appendChild(stone);

      if (checkWin(x, y)) {
        statusElement.textContent = `${currentPlayer === 'black' ? '⚫ 흑돌' : '⚪ 백돌'} 승리!`;
        gameOver = true;
        return;
      }

      currentPlayer = currentPlayer === 'black' ? 'white' : 'black';
      statusElement.textContent = `${currentPlayer === 'black' ? '흑돌' : '백돌'} 차례입니다`;
    }

    function checkWin(x, y) {
      const directions = [
        [1, 0], [0, 1], [1, 1], [1, -1] // 가로, 세로, 대각 ↘, 대각 ↗
      ];

      for (let [dx, dy] of directions) {
        let count = 1;

        for (let dir = -1; dir <= 1; dir += 2) {
          let nx = x + dx * dir;
          let ny = y + dy * dir;

          while (
            nx >= 0 && ny >= 0 && nx < SIZE && ny < SIZE &&
            board[ny][nx] === currentPlayer
          ) {
            count++;
            nx += dx * dir;
            ny += dy * dir;
          }
        }

        if (count >= 5) return true;
      }

      return false;
    }

    function resetGame() {
      createBoard();
    }

    createBoard();
  </script>
</body>
</html>
