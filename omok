    #board {
      margin: 20px auto;
      display: grid;
      grid-template-columns: repeat(15, 40px);
      grid-template-rows: repeat(15, 40px);
      width: 600px;
      height: 600px;
      border: 2px solid #333;
    }

    .cell {
      width: 40px;
      height: 40px;
      border: 1px solid #aaa;
