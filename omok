      justify-content: center;
    }

    .black {
      width: 30px;
      height: 30px;
      background-color: black;
      border-radius: 50%;
    }

    .white {
      width: 30px;
      height: 30px;
      background-color: white;
      border-radius: 50%;
      box-shadow: 0 0 3px rgba(0, 0, 0, 0.6);
    }

    #status {
      margin-top: 20px;
